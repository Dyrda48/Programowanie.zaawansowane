@model Befit.Models.DTO.TrainingEntryCreateDto

@{
    ViewData["Title"] = "Create training entry";
}

<h1>Create training entry</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TrainingSessionId" class="control-label"></label>
        <select asp-for="TrainingSessionId" class="form-control"
                asp-items="ViewBag.TrainingSessionId"></select>
        <span asp-validation-for="TrainingSessionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExerciseTypeId" class="control-label"></label>
        <select asp-for="ExerciseTypeId" class="form-control"
                asp-items="ViewBag.ExerciseTypeId"></select>
        <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight" class="control-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sets" class="control-label"></label>
        <input asp-for="Sets" class="form-control" />
        <span asp-validation-for="Sets" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Reps" class="control-label"></label>
        <input asp-for="Reps" class="form-control" />
        <span asp-validation-for="Reps" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
