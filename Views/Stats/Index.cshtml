@model List<Befit.Models.ExerciseStatsViewModel>

<h2>Statystyki ćwiczeń</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwa ćwiczenia</th>
            <th>Ile razy wykonano</th>
            <th>Łączna liczba powtórzeń</th>
            <th>Średnie obciążenie</th>
            <th>Maksymalne obciążenie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExerciseName</td>
                <td>@item.TimesPerformed</td>
                <td>@item.TotalReps</td>
                <td>@item.AverageWeight</td>
                <td>@item.MaxWeight</td>
            </tr>
        }
    </tbody>
</table>